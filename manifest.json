{
    "name": "TimeIsMoney",
    "version": "1.0",
    "description": "Chrome extension that converts dollar amounts in webpage to time needed to make said dollar amount",
    "manifest_version": 2,
    "options_page": "options.html",
    "permissions": ["activeTab", "storage", "declarativeContent"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "page_action"  :  {
        "default_title": "My cool plugin",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_popup" :"popup/popup.html"  
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}